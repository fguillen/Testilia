
<div class="form-block">
  <h1>Users</h1>
  <ul class="list">
    <% @users.each do |user| %>
      <li class="<%= cycle('even', 'odd') %>"> 
        <span class="list-content"><%= user.email %></span>
        <span class="list-links">
          <%= link_to "Edit", edit_user_path(user), :class => 'user-link' %>
          or <%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete, :class => 'user-link' %>
        </span>
      </li>
    <% end %>
  </ul>
</div>


<p><%= link_to "New User", new_user_path, :class => 'user-link' %></p>
